# Signaling Server Configuration
# Copy this file to .env and update with your production values

# JWT Settings
# SECURITY: Change this in production! Use a strong random key.
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database
# Development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./signaling.db
# Production (PostgreSQL example)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/signaling

# Server
HOST=0.0.0.0
PORT=8000

# CORS - comma-separated list of allowed origins
# Development: Allow all origins
CORS_ORIGINS=*
# Production: Specify allowed origins
# CORS_ORIGINS=https://lem.gg,https://app.lem.gg

# Rate Limiting
MAX_CONNECTIONS_PER_SECOND=5

# Relay Server URL
# Development
RELAY_URL=ws://localhost:8001
# Production
# RELAY_URL=wss://relay.lem.gg
